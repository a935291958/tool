<view class="classname">
   <form bindsubmit="formSubmit">
      <text class="prompt">使用建议</text>
      <textarea class="content" value='' placeholder="254个字之内" focus name="content" />
      <view class="tel">
         <text class="contact">手机号码</text>
         <input class="telInput" placeholder="选填" type="number" name="phone" />
         <view class="clear"></view>
      </view>
		<view class="tel">
         <text class="contact">邮箱</text>
         <input class="telInput" placeholder="选填" type="text" name="email" />
         <view class="clear"></view>
      </view>
		<view class="tel">
         <text class="contact">微信号</text>
         <input class="telInput" placeholder="选填" type="text" name="wx" />
         <view class="clear"></view>
      </view>
		<view class="tel">
         <text class="contact">QQ</text>
         <input class="telInput" placeholder="选填" type="number" name="qq" />
         <view class="clear"></view>
      </view>
      <button class="subBut" form-type="submit" type="primary">提交</button>
   </form>


</view>