  top: 0%;
  position: absolute;
  z-index: 2;
  margin-top: 1em;
}
.search image {
  width: 40rpx;
}
.mid {
  display: flex;
  display: -webkit-flex;
  margin-left: auto;
  margin-right: auto;
}
.mid > view {
  flex: 1;
}
.box {
  padding: 1em 10%;
  border: #eee solid 1px;
  border-right: hidden;
  border-left: hidden;
  margin-bottom: .5em;
}
.today {
  font-size: 0.9rem;
  padding-right: 1rem;
}
.today image {
  width: 50rpx;
}
.date,
.midWeather {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.midWeather {
  margin-top: .25rem;
}
.tomorrow {
  padding-left: 1rem;
  border-left: 2rpx solid #eee;
}
.hourly {
  padding-left: 0px;
  padding-right: 0px;
  overflow-x: hidden;
}
.hourlyList {
  display: flex;
  display: -webkit-flex;
}
.hourlyItem {
  padding: 0px 1em;
  text-align: center;
}
.hourlyItem image {
  width: 40rpx ;
  margin-top: .25rem;
}
.hourlyTime {
  color: #212121;
  font-size: 0.8rem;
}
.index {
  padding: 0px;
  border-top: 1px solid #eee;
  border-bottom: hidden;
}
.indexItem {
  border: 1px solid #eee;
  border-right: hidden;
  border-top: hidden;
  text-align: center;
}
.indexItem image {
  width: 60rpx;
  margin-left: auto;
  margin-right: auto;
  display: block;
  margin-top: .5em;
}
.indexItem:last-child {
  border-right: 1px solid #eee ;
}
.indexItem:first-child,
.indexItem:nth-child(5) {
  border-left: hidden;
}
.indexItem {
  float: left;
  width: 24%;
}
.ivalue {
  color: #363636;
  font-size: 0.8rem;
  padding: .25em 0px;
}
.iname {
  color: #989898;
  font-size: 0.75rem;
  padding-bottom: .5em;
}
.searchMain {
  left: 0%;
  top: 0%;
  position: absolute;
  z-index: 2;
  z-index: 10;
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.searchMain input,
.searchMain button {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}
.searchMain input {
  background: #fff;
  margin-top: 10rem;
  display: block;
  height: 2em;
  font-size: 0.8rem;
  text-align: center;
}
.searchMain button {
  margin-top: 1em;
