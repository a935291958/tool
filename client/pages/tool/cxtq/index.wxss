.top {
  position: relative;
}
.top image {
  width: 100%;
  display: block;
}
.positionBox {
  left: 0%;
  top: 0%;
  position: absolute;
  z-index: 2;
  width: 100%;
}
.position {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  padding-top: 1rem;
}
.position image {
  width: 35rpx;
  margin-right: .25em;
}
.position text {
  color: #ffffff;
  font-size: 0.85rem;
}
.air {
  color: #ffffff;
  font-size: 0.7rem;
  background: #aed675;
  display: inline-block;
  padding: .2rem .5rem;
  text-align: center;
  line-height: 1.05rem;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  border-radius: 10rpx;
  left: 2%;
  top: 10%;
  position: absolute;
  z-index: 2;
}
.tempBox {
  left: 0%;
  top: 20%;
  position: absolute;
  z-index: 2;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.tempMain {
  text-align: center;
}
.tempMain > view {
  line-height: 1.1em;
  color: #fff;
}
.msg {
  left: 0%;
  top: 56%;
  position: absolute;
  z-index: 2;
  width: 100%;
  text-align: center;
  color: #ffffff;
  font-size: 0.8rem;
}
.msg text {
  display: block;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}
.temp {
  color: #ffffff;
  font-size: 4rem;
}
.weather {
  font-size: 1.5rem;
}
.humidity {
  font-size: 0.9rem;
  margin-top: .5rem;
}
.search {
